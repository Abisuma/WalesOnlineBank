@model CustomerUser

<style>
    /* Custom CSS to set the height of columns and their parent to 100% */
    .rows {
        height: 100vh; /* Set the row's height to 100% of the viewport height */
    }

    .col-2, .col-10 {
        height: 100%; /* Set the columns' height to 100% of their parent's height */
    }

    .sidebetweenbars{
        margin-right: 20px;
    }

    .hyperlinkremove{
        text-decoration: none;
    }

    .moveright{
        margin-right: 50px;
    }
</style>
<div class="container-fluid">
    <div class="row rows ">
        <!-- Dashboard Content -->
       
         <div class="col-2 bg-dark text-white">
                <!-- Sidebar/Menu -->
                <ul class="list-unstyled">
                    <li class=" active mt-4"><a class="hyperlinkremove" id="dashboard-link">Dashboard</a></li>
                        <li class="text-muted  mt-5">
                            TRANSACTION
                                 <ul class="list-unstyled">
                        <li class="mt-3 active text-white "><a class="transfer-link  hyperlinkremove" asp-area="Admin" asp-controller="Account" asp-action="Deposit">Deposit</a></li>
                        <li class="mt-3 active text-white"><a class="transfer-link  hyperlinkremove" asp-area="Admin" asp-controller="Account" asp-action="Withdraw">Withdraw</a></li>
                                </ul>
                        </li>
                    <li class="text-muted  mt-5">
                        PROFILE

                    <ul class="list-unstyled">
                        <li class="mt-3 active text-white hyperlinkremove">
                            <a asp-area="Identity" asp-page="/Account/ProfileEdit" asp-route-id="@ViewBag.UserId" class="hyperlinkremove">Update Customer's Profile</a>
                                </li>
                            </ul>
                    </li>

                <li class="text-muted  mt-5">
                    LISTS

                    <ul class="list-unstyled">
                        <li class="mt-3 active text-white">
                            <a asp-area="Admin" asp-controller="Account" asp-action="CustomerList" class="hyperlinkremove">Customers List</a>
                        </li>
                        <li class="mt-3 active text-white">
                            <a asp-area="Admin" asp-controller="Account" asp-action="DepositList" class="hyperlinkremove">Deposit List</a>
                        </li>
                        <li class="mt-3 active text-white">
                            <a asp-area="Admin" asp-controller="Account" asp-action="WithdrawList" class="hyperlinkremove">Withdrawal List</a>
                        </li>
                    </ul>
                </li>

            </ul>
         </div>


        <div class="col-10" id="dashboard-content">
            
        </div>
    </div>
</div>



    

