    </div>

<script>
    function fetchAccountName(accountNumber) {
        // Make an AJAX request to your server to fetch the account name.
        // Replace '/api/GetAccountName' with the actual server endpoint.
        $.ajax({
            url: ' /customersection/customeruser/GetAccountName',
            method: 'GET',
            data: { accountNumber: accountNumber },
            success: function (data) {
                // Update the account name input field by id.
                $('#accountName').val(data.accountName);
            },
            error: function (error) {
                console.error('Error fetching account name:', error);
            }
        });
    }


</script>